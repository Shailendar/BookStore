@model BookStore.DA.Customer

@{
    ViewBag.Title = "MyProfile";
}
<div class="well" style="height:600px">
    <div class="well col-md-6 col-md-offset-3" style="background-color:white;">

        <div class="col-lg-12" style="margin: 10px 0 10px 0;">
            <h2>  <span class="pull-left" style="color:skyblue;">My Profile</span></h2><br />
            <span class="pull-right">
                @Html.ActionLink("Edit Profile", "AddOrEdit", new { }, new { @class = "pull- btn btn-primary btn-sm" })
            </span>
            <div class="clearfix"></div>
            <br />

            @if (Request.Params["message"] != null)
            {
                if (Request.Params["message"].ToString() == "1")
                {
                    <div style="margin: 10px 0 10px 0;" class="text-center">
                        <span class="label label-success">Your profile added successfully</span>
                    </div>
                }
                else if (Request.Params["message"].ToString() == "2")
                {
                    <div style="margin: 10px 0 10px 0;" class="text-center">
                        <span class="label label-success">Your profile updated successfully</span>
                    </div>
                }
            }
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.Email)
            <div>@Model.FirstName</div>
            <h5>First Name : </h5><hr />
            <div>@Model.LastName</div>
            <h5>Last Name : </h5><hr />
            <div>@Model.Email</div>
            <h5>Email : </h5><hr />
            <div>@Model.Phone</div>
            <h5>Phone : </h5><hr />
            <div>
                @if (Model.BirthDate != null)
                {
                    @Model.BirthDate.Value.ToString("dd-MM-yyyy")
                }
                else
                {
                    <span><i>-- Not Specified --</i></span>
                }
            </div>
            <h5>Birth Date : </h5>

            @*<span class="col-lg-4 col-lg-offset-8" style="bottom:50px;">
                    @Html.ActionLink("Edit Profile", "AddOrEdit", new { }, new { @class = "pull-right btn btn-primary btn-sm" })
                </span>*@
        </div>
    </div>
</div>