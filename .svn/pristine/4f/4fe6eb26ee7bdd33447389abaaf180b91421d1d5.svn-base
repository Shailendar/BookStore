@model BookStore.DA.BookStatus

<div style="margin: 10px 0 10px 0;">
    @if (Model.Id == 0)
    {
        <span class="header">Add BookStatus</span>
    }
    else
    {
        <span class="header">Edit BookStatus</span>
    }
    <hr />
</div>
<div class="well" style="height:400px; width:800px">

    <div class="row">
        @using (Html.BeginForm("AddOrEdit", "BookStatus", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.HiddenFor(m => m.Id)
            if (!string.IsNullOrEmpty(Model.Error))
            {
                <div style="margin: 10px 0 10px 0;">
                    <span class="label label-danger col-md-offset-2">@Model.Error</span>
                </div>
            }
            <div class="form-group">
                @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control", @MaxLength = 15 })
                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "4", @MaxLength = 500 })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.RadioButtonFor(m => m.IsActive, true, new { @class = "" }) <span>Active</span>
                    @Html.RadioButtonFor(m => m.IsActive, false, new { @class = "" }) <span>Inactive</span>
                    @Html.ValidationMessageFor(m => m.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("cancel", "BookStatusList", null, new { role = "button", @class = "btn btn-sm btn-default" })
                    @*<input type="button" value="Cancel" class="btn btn-sm btn-default" />*@
                    <input type="submit" value="Save" class="btn btn-sm btn-primary" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}