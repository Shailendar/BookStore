@model List<BookStore.DA.Cart>

@{
    ViewBag.Title = "Shopping Cart";
    int srNo = 0;
    decimal grandTotal = 0;
}
@using (Html.BeginForm())
{
    <h2>Shopping Cart</h2>
    <div class="jumbotron">
        <table style="background-color:white" class="table table-bordered">
            <thead>
                <tr>
                    <th>S.No</th>
                    <th>Book Name</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Discount</th>
                    <th>Shipping Cost</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count(); i++)
                {
                    var item = Model[i];

                    @Html.HiddenFor(model => Model[i].Id)
                    @Html.HiddenFor(model => Model[i].CustomerId)
                    @Html.HiddenFor(model => Model[i].BookId)
                    int selectedQuantity = item.Quantity;

                    <tr>
                        <td>@(srNo += 1)</td>
                        <td>@item.Book.Name</td>
                        <td>
                            @Html.DropDownListFor(model => Model[i].Quantity, new SelectList(new[] { 1, 2, 3, 4, 5 }, selectedQuantity), new { @onchange = "form.submit();" })
                        </td>
                        <td>@item.Book.UnitPrice</td>
                        <td>@item.Book.Discount</td>
                        <td>@item.Book.ShippingCost</td>
                        <td>
                            @{
                    var itemTotal = ((item.Quantity * item.Book.UnitPrice) - item.Book.Discount + item.Book.ShippingCost);

                    <span>@itemTotal</span>
                    grandTotal += itemTotal;
                            }
                        </td>
                        <td>@Html.ActionLink("Delete", "Delete", new { BookId = @item.BookId })</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="6" class="text-right">Grand Total</th>
                    <th colspan="6">@grandTotal</th>

                </tr>
            </tfoot>
        </table>
        <div class="pull-right">
            @if (@Model.Count() != 0)
            {
                @Html.ActionLink("Place Your Order", "ShippingAddress", "ShippingAddress", new { grandtotal = grandTotal, bookId = @ViewBag.BookId }, new { @class = "btn btn-primary btn-block", role = "button" })
            }
            else
            {
                @Html.ActionLink("Place Your Order", "ShoppingCart", null, new { @class = "btn btn-primary btn-block", role = "button" })
            }
        </div>
    </div>
}