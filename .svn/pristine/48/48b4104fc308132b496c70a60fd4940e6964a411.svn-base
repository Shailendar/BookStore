@model BookStore.Models.RegisterViewModel

<div class="jumbotron" style="margin-left:220px; width:690px;">
    @{
        ViewBag.Title = "Create Account";
    }
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @*<h4>Create a new account.</h4>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="input-group" style="width:600px;">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName, new { @class = "col-md control-label" })
                    <div class="col-md-pull-10">
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", @MaxLength = 20 })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.LastName, new { @class = "col-md control-label" })
                    <div class="col-md-pull-10">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @MaxLength = 20 })
                        @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md control-label" })
                <div class="col-md-pull-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @MaxLength = 255, @width = "700px" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="input-group" style="width:600px;">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md control-label" })
                    <div class="col-md-pull-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @MaxLength = 15 })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md control-label" })
                    <div class="col-md-pull-10">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <div class="input-group" style="width:600px;">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md control-label" })
                    <div class="col-md-pull-10">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @MaxLength = 10 })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(m => m.BirthDate, htmlAttributes: new { @class = "control-label col-md" })
                    <div class="col-md-pull-10">
                        @Html.EditorFor(m => m.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-pull-10 pull-right">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-pull-10 pull-right">
                Already have an account? @Html.ActionLink("Login", "Login", null, new { @class = "col-md control-label" })
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jqueryui")
        @Styles.Render("~/Content/cssjqryUi")

        <script type="text/javascript">
            $(document).ready(function () {
                $('input[type=datetime]').datepicker({
                    maxDate: "-18Y",
                    dateFormat: "dd/mm/yy",
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0",
                    beforeShow: function (textbox, instance) {
                        instance.dpDiv.css({
                            //marginTop: (textbox.offsetHeight) + 'px',
                            //marginLeft: textbox.offsetWidth + 'px'
                        });
                    }
                });
            });
        </script>
    }
</div>
